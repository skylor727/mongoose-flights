<%- include('../partials/header') %>
    <section class="flight-info">
        <h1>Flight Information: </h1>
        <table>
            <thead>
                <tr>
                    <th>Airline</th>
                    <th>Airport</th>
                    <th>Flight Number</th>
                    <th>Departure</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= flight.airline %>
                    </td>
                    <td>
                        <%= flight.airport %>
                    </td>
                    <td>
                        <%= flight.flightNo %>
                    </td>
                    <td>
                        <%= flight.departs %>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>
    <section class="arrival-info">

        <h2>Arrival Information:</h2>
        <% if (flight.destinations.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Airport</th>
                        <th>Arrival Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% flight.destinations.forEach(function(f) { %>
                        <tr>
                            <td>
                                <%= f.airport %>
                            </td>
                            <td>
                                <%= f.arrival %>
                            </td>

                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <h5>No Arrival Information Yet</h5>
                <% } %>
    </section>
    <!-- new markup below -->
    <section class="destinations">
        <h2>Destinations:</h2>
        <div class="form-wrapper">
            <form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
                <label>Airport:</label>
                <select name="airport">
                    <option value="AUS">AUS</option>
                    <option value="DFW">DFW</option>
                    <option value="DEN">DEN</option>
                    <option value="LAX">LAX</option>
                    <option value="SAN">SAN</option>
                </select>
                <label>Arrival:
                    <input type="datetime-local" name="arrival">
                </label>
                <input type="submit" value="Add Destination">
            </form>
        </div>

    </section>
    <section class="ticket-info">
        <h2>Tickets:</h2>
        <% if (Object.values(tickets).length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Price</th>
                        <th>Seat</th>
                    </tr>
                </thead>
                <tbody>
                    <% tickets.forEach(function(t) { %>
                        <tr>
                            <td>
                                <%= t.price %>
                            </td>
                            <td>
                                <%= t.seat %>
                            </td>

                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <h5>No Ticket Information Yet</h5>
                <% } %>
                    <a href="/flights/<%= flight._id %>/tickets/new">Add Ticket</a>
    </section>
    <%- include('../partials/footer') %>